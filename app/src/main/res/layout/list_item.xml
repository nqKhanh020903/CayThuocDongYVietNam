<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#F9FBE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Image of herb -->
        <ImageView
            android:id="@+id/herbImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_herb" />

        <!-- Herb info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/herbTitle"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:text="Ai Ye"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/herbSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:text="Regulate Blood, Stop Bleeding"
                android:textSize="14sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/herbTemperature"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Warm"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
